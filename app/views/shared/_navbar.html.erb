<style>
  .navbar_brand_logo{
    height: 24px;
    width: 24px;
  }
</style>

<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <%=image_tag("logo_symbol.png",class:"navbar_brand_logo") %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <%if account_signed_in?%>
          <%if current_account.freelancer?%>
          <li class="nav-item">
            <%=link_to "Projects",projects_path,class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%=link_to "Teams",teams_path,class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%=link_to "My Profile",freelancer_profile_path(current_account.accountable),class:"nav-link" %>
          </li>
          <%else%>
          <li class="nav-item">
            <%=link_to "My Projects",my_projects_path,class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%=link_to "My Profile",client_profile_path(current_account.accountable),class:"nav-link" %>
          </li>
          <%end%>
        <%end%>
      </ul>

      <ul class="navbar-nav">
        <% if account_signed_in?%>
          <li class="nav-item">
            <%=link_to "Logout",destroy_account_session_path,data:{turbo_method: :delete},class:"nav-link" %>
          </li>
        <%else%>
        <li class="nav-item">
          <%=link_to "Login",new_account_session_path,class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%=link_to "Register",new_account_registration_path,class:"nav-link" %>
        </li>
        <% end %>
      </ul>

    </div>
  </div>
</nav>
