

<div class="container" >

  <div class="row d-flex justify-content-center align-items-center my-5">

    <div class="col-4 d-flex justify-content-center align-items-center flex-column">
      <div>
        <%=image_tag("logo.png", :alt=>"not found") %>
      </div>
      <div>
         <h1 class="display-6">
           Join With us as Client
         </h1>
      </div>
    </div>

    <div class="col-8">
      <div class="card">
        <div class="card shadow">
          <div class="card-body">

              <%= form_with model:@client,url: client_registration_path ,class: "row" do |client_form| %>
                    <%= fields_for :account_attributes do|form| %>
                          <div class="my-3 col-6 form-group">
                            <%= form.label :name ,class:"form-label"%>
                            <%= form.text_field :name ,class:"form-control" ,required: true%>
                            <% @account.errors.full_messages_for(:name).each do |message| %>
                                    <div class="text-danger"><%= message %></div>
                            <% end %>
                          </div>

                          <div class="my-3 col-6 form-group" >
                            <%= form.label :email,class:"form-label" %>
                            <%= form.email_field :email,class:"form-control",required: true %>
                            <% @account.errors.full_messages_for(:email).each do |message| %>
                                   <div class="text-danger"><%= message %></div>
                              <% end %>
                          </div>

                          <div class="my-3 col-6 form-group">
                            <%= form.label :phone ,class:"form-label"%>
                            <%= form.number_field :phone,class:"form-control",required: true %>
                            <% @account.errors.full_messages_for(:phone).each do |message| %>
                                   <div class="text-danger"><%= message %></div>
                              <% end %>
                          </div>


                          <div class="my-3 col-6 form-group">
                            <%= form.label :gender,class:"form-label" %><br>
                            <%= form.select(:gender, ["male","female","transgender","others"],{}, {:class=> "form-select",:required => true }) %>
                            <% @account.errors.full_messages_for(:gender).each do |message| %>
                                   <div class="text-danger"><%= message %></div>
                              <% end %>
                          </div>

                          <div class="my-3 col-6 form-group">
                            <%= form.label :linkedin,class:"form-label" %>
                            <%= form.url_field :linkedin,class:"form-control",required: true %>

                          </div>

                     <% end %>




              <div class="my-3 col-6 form-group">
                <%= client_form.label :company,class:"form-label" %>
                <%= client_form.text_field :company,class:"form-control",required: true %>
              </div>

              <div class="my-3 col-6 form-group">
                <%= client_form.label :company_location,class:"form-label" %><br>
                <%= client_form.text_field :company_location,class:"form-control",required: true %>
              </div>

              <%= fields_for :account_attributes do|form| %>

              <div class="my-3 col-6 form-group">
                <%=form.label :image,class:"form-label" %><br>
                <%=form.file_field :image,class:"form-control",required: true %>
              </div>




              <div class="my-3 col-6 form-group">
                <%= form.label :password, class:"form-label"%>
                <%= form.password_field :password ,class:"form-control",required: true%>
                <% @account.errors.full_messages_for(:password).each do |message| %>
                        <div class="text-danger"><%= message %></div>
                  <% end %>
              </div>

              <div class="my-3 col-6 form-group">
                <%= form.label :password_confirmation, class:"form-label"%>
                <%= form.password_field :confirm_password_confirmation ,class:"form-control",required: true%>
              </div>


              <div class="my-3  form-group">
                <%= form.label :description,class:"form-label" %><br>
                <%= form.text_area :description,class:"form-control" ,required: true%>
                <% @account.errors.full_messages_for(:description).each do |message| %>
                      <div class="text-danger"><%= message %></div>
                <% end %>
              </div>

              <% end %>



              <div class="my-3 form-group">
                <%= client_form.submit "Register as Client",class:"btn btn-success" %>
              </div>
            <% end %>

      </div>
    </div>
   </div>
  </div>


 </div>

</div>



