<style>
    .floating_button{
        position:absolute;
        bottom:20px;
        right:20px;
        width: fit-content;
        border-radius: 50%;

    }
</style>

<div class="container">

    <div class="my-3">

        <h1>All Projects</h1>

        <div class="row">
            <% @projects.each do |project| %>
                <%= render "card" ,project: project,author_display: true %>
            <% end %>
        </div>
    </div>

    <div class="floating_button">
        <%= link_to "+",new_project_path,class:"btn btn-success  floating_button" %>
    </div>
</div>
