<%= form_with model: project do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>

  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>
  <div>
    <%=form.label :image %> <br>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.label :amount %><br>
    <%= form.number_field :amount %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
