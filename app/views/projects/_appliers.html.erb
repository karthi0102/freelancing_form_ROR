

<div class="col-3">
    <div class="card">
        <div class="card-body">
            <% if applicant.applicable_type=="Freelancer" %>
            <h5 class="m-1"><strong>Name : </strong><%=applicant.applicable.account.name%> </h5>
            <%else%>
            <h5 class="m-1"><strong>Name : </strong><%=applicant.applicable.name%> </h5>
            <% end %>
            <h5  class="m-1"><strong>Type : </strong><%=applicant.applicable_type%></h5>
            <div class="d-flex gap-2 my-2">
                <%=link_to "View",freelancer_profile_path(applicant.applicable),class:"btn btn-sm btn-info"%>
                <% if d%>
                <%= button_to "Accept",accept_applicant_path(applicant) ,method: :post,class:"btn btn-sm btn-success" %>
                <%= button_to "Reject",reject_applicant_path(applicant) ,method: :post ,class:"btn btn-sm btn-danger" %>
                <%end%>
            </div>
        </div>
    </div>
</div>


