
<div class="col-2 mx-3 rounded-3 <%= bg %> text-light">
    <%if current_account.accountable == @freelancer%>
        <div class="skill-options">
            <div class="my-1">
                <%= link_to delete_skill_path(skill),data:{
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } do %>
                      <i class="fa-solid fa-trash" style="color:white"></i>
                <% end %>
            </div>
        </div>
    <% end %>
    <p class="text-center">
        <%=skill.name %>
    </p>
</div>
