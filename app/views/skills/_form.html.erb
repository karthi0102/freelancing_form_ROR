<%= form_with model: [@freelancer ,@freelancer.skills.build ],class:"row",url:skills_path do |form|%>



<div class="my-3 form-group col-4">
    <%= form.text_field :name,class:"form-control",placeholder:"Skill Name"%>
</div>

<div class="my-3 form-group col-4">
  <%= form.select(:level, ['Beginner', 'Intermediate', 'Advanced'], {selected: 'Intermediate'},{:class=>"form-select"}) %>
</div>

<div class="form-group my-3 col-4">
    <%= form.submit "Add Skill",class:"btn btn-success btn-sm" %>
</div>

<%end%>
